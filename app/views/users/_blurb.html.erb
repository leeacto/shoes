<div id=<%= user.id %>>
	<%= link_to user.username, user_path(user) %><br>
	Shoes: <%= user.pairs.count %><br>
	Available For Sale: 

	<% if current_user != user %>
			<%= button_to 'Unfollow', { action: 'destroy', controller: 'follows',
					user_id: current_user.id, id: user.id }, form_class: 'unfollow' %>
			<%= button_to 'Follow', { action: 'create', controller: 'follows',
					user_id: current_user.id, id: user.id }, form_class: 'follow' %>
	<% end %>
</div>
